    <%= form.label :start %>
    <%= form.datetime_select :start, id: :game_start, ampm: true %>
  </div>

  <div class="field">
    <%= form.label :stop %>
    <%= form.datetime_select :stop, id: :game_stop, ampm: true %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :game_name %>
  </div>

  <div class="field">
    <%= form.label :sport %>
    <%= form.text_field :sport, id: :game_sport %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :game_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
