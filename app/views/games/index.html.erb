
<div class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Game</h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<body class="games-display">
<div class="container-map-box">
  <div class="container-map">
  <div id="map"></div>

  </div>
</div>

<div class="container-games">


  <h1>Games</h1>
  <%= hidden_field_tag 'games_lat_and_lng', @games.map {|g| {:lat => g.latitude, :lng => g.longitude, :description => g.description}}.to_json %>
  <table>
    </thead>

    <tbody>
      <!-- will display game info along with corresoponding image -->
      <div><% @display_games.each do |game, icon_url| %></div>


        <div><tr>
          <td><%= image_tag icon_url, size: @dimensions %></td>
          <td id="location"><%= game.location %></td>
          <td id="location"><%= game.start.strftime("%a, %B %d, %I:%M%P") %> </td>
          <td id="location"><%= game.stop.strftime("%a, %B %d, %I:%M%P") %></td>
          <td id="location"><%= game.sport %></td>
      

    
          <td id="show"><button type="button" class="btn btn-outline-success button-size-small"><%= link_to 'Show', game, remote: true%></button></td>
         
    

        </tr>
      <% end %>
      </div>



    </tbody>

  </table>
  <br>
   <button type="button" class="btn btn-outline-success"><%= link_to 'New Game', new_game_path %></button>
</div>